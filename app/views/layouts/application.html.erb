            <li><%=link_to "Newsroom", newsroom_path, "data-no-turbolink" => true%></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Contact us <span class="caret"></span></a>
