<div class="well col-lg-9">
  <div class="col-md-11">
    <%= simple_form_for(@correspondence, html: {class: "form-horizontal"}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :corres_type, label: "Request" , collection: Correspondence.types, selected: 1%>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :company %>
        <%= f.input :designation %>
        <%= f.input :contact_number, :input_html => { :maxlength => 10, }, hint: "999-999-9999" %>
        <%= f.input :email %>
        <%= f.input :industry %>
        <%= f.input :location %>
        <%= f.input :additional_info %>
        <%= f.simple_captcha(:object=>"correspondence",:label => "Are you a human?") %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send"%>
        <%= link_to 'Back', :back, class: "btn btn-link" %>
      </div>
    <% end %>    
  </div>  
</div>

