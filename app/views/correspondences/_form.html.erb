<%= simple_form_for(@correspondence) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :corres_type, label: "Request" , collection: Correspondence.types, selected: 1%>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :comapny %>
    <%= f.input :designation %>
    <%= f.input :contact_number %>
    <%= f.input :email %>
    <%= f.input :industry %>
    <%= f.input :location %>
    <%= f.input :additional_info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back', :back, class: "btn btn-link" %>
  </div>
<% end %>
