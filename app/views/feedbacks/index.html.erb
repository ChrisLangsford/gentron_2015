<h1>Listing feedback stories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Industry</th>
      <th>Work description</th>
      <th>Feedback description</th>
      <th>Rating</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.company_name %></td>
        <td><%= feedback.industry %></td>
        <td><%= feedback.work_description %></td>
        <td><%= feedback.feedback_description %></td>
        <td><%= feedback.rating %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Delete', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


