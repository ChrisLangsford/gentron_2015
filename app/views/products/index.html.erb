 <!-- Header -->
 <header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Take a moment to browse</div>
      <div class="intro-heading">Our Products</div>
    </div>
  </div>
</header>

<section id="products">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%if Product.count > 0%>
        <h2 class="section-heading">Our Products</h2>        
        <h3 class="section-subheading text-muted"><%= paginate @products %></h3>
        <%else%>
        <h2 class="section-heading">Uh Oh..</h2>        
        <h3 class="section-subheading text-muted">Looks like the site admin hasn't loaded any products yet </h3>
        <%end%>
      </div>
    </div> 

    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%=image_tag product.picture.url, class: "img-responsive"%> 
        <div class="portfolio-caption">
          <h4><%=product.name%></h4>
          <p class="text-muted"><%=product.description%></p>
        </div>        
      </div>
      <% end %>
    </div>
  </div>  
</section>