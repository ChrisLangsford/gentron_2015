<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Our Products</h2>        
        <h3 class="section-subheading text-muted"><%= paginate @products %></h3>
      </div>
    </div>    
    <div class="row">
      <div class="col-lg-4">
        <div class="form-group">
          <%= form_tag products_staff_path, :method => :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control" %>
            <span class="input-group-btn">          
              <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
            </span>
            
          </div>
          <% end %>        
        </div>
      </div>
    </div>
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%=link_to edit_product_path(product), class: "portfolio-link" do%>
        <div class="portfolio-hover">
          <div class="portfolio-hover-content">
            <i class="fa fa-pencil fa-3x"></i>
          </div>
        </div>
        <img src="img/portfolio/roundicons.png" class="img-responsive" alt="">
        <%end%>
        <div class="portfolio-caption">
          <h4><%=product.description%></h4>
          <p class="text-muted"><%=product.description%></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>  
</section> 
<%=link_to "Back", staff_path, class:"btn btn-default"%>
