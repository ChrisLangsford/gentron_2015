<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">
          Our Products 
          <%=link_to new_product_path, class: "btn btn-primary" do%>
          <i class="fa fa-plus"></i>
          New
          <%end%>
        </h2>        
        <h3 class="section-subheading text-muted"><%= paginate @products %></h3>
      </div>
    </div>    
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%=link_to edit_product_path(product), class: "portfolio-link" do%>
        <div class="portfolio-hover">
          <div class="portfolio-hover-content">
            <i class="fa fa-pencil fa-3x"></i>
          </div>
        </div>
        <%=image_tag product.picture.url, class: "img-responsive"%>
        <%end%>
        <div class="portfolio-caption">
          <h4><%=product.description%></h4>
          <p class="text-muted"><%=product.description%></p>
          <%= link_to  product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do%>
          <i class="fa fa-trash"></i>
          Delete
          <%end%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%=link_to "Back", staff_path, class:"btn btn-default"%>
</div>  
</section> 

