<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :picture, as: :file %>
    <%= f.input :onSpecial, as: :boolean, label: "On Special"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, label: "on Special", class:"btn btn-primary" %>
  </div>
<% end %>
