<h1 class="page-header">
  Newsroom  
</h1>

<%@articles.each do |a|%>
  <div>
    <%=image_tag(a.image(:medium))%>

    <h2>
      <%=a.title.capitalize%>      
      
    </h2>
    <p><%= a.body%></p>
    <%if a.link.present?%>
    <%=link_to a.link_display_text, a.link%>
    <%end%>
    <%if a.reference.present?%>
    <p><b>Reference</b></p>
    <%=link_to a.reference.to_s, a.reference%>
    <%end%>
  </div>
<%end%>